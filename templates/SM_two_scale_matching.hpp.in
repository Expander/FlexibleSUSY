#ifndef @ModelName@_TWO_SCALE_MATCHING_H
#define @ModelName@_TWO_SCALE_MATCHING_H

#include "two_scale_matching.hpp"
#include "@ModelName@_two_scale_model.hpp"
#include "SM_two_scale_model.hpp"
#include "@ModelName@_SM_matching.hpp"
#include "error.hpp"
#include "two_scale_constraint.hpp"

namespace flexiblesusy {

class Two_scale;
class Two_scale_model;

template <class T>
class @ModelName@_SM_Matching;

template<>
class @ModelName@_SM_Matching<Two_scale>: public Matching<Two_scale>
{
public:
   @ModelName@_SM_Matching(): constraint(0), eft(0), model(0) {}

   @ModelName@_SM_Matching(SM<Two_scale>* low_, @ModelName@<Two_scale>* high_, Constraint<Two_scale>* constraint_)
      :constraint(constraint_), eft(low_), model(high_) {}

   virtual ~@ModelName@_SM_Matching() {}

   virtual double get_scale() const 
   {
   
      if(!constraint) throw SetupError("Constraint pointer in matching class is NULL!");
      
      return constraint->get_scale();
   }
   
   void set_constraint(Constraint<Two_scale>* constraint_)
   {
      constraint = constraint_;
   }

   virtual void set_models(Two_scale_model* low, Two_scale_model* high) {
      eft = (SM<Two_scale>*) low;
      model = (@ModelName@<Two_scale>*) high;
   }

   virtual void match_high_to_low_scale_model()
   {
      if(!model || !eft) throw SetupError("Model pointer in matching class is NULL!");
      if(!constraint) throw SetupError("Constraint pointer in matching class is NULL!");

      model->calculate_DRbar_masses();
      model->solve_ewsb_one_loop();
      
      if(!model->get_thresholds())
         @ModelName@_SM_matching::match_high_to_low_scale_model_tree_level(*eft, *model);
      else 
         @ModelName@_SM_matching::match_high_to_low_scale_model(*eft, *model);
   }

   virtual void match_low_to_high_scale_model()
   {
      if(!model || !eft) throw SetupError("Model pointer in matching class is NULL!");
      if(!constraint) throw SetupError("Constraint pointer in matching class is NULL!");

      if(!model->get_thresholds())
         @ModelName@_SM_matching::match_low_to_high_scale_model_tree_level(*model, *eft);
      else
         @ModelName@_SM_matching::match_low_to_high_scale_model(*model, *eft);
   }

   void match_high_to_low_scale_model_tree_level()
   {
      if(!model || !eft) throw SetupError("Model pointer in matching class is NULL!");
      if(!constraint) throw SetupError("Constraint pointer in matching class is NULL!");

      model->calculate_DRbar_masses();

      @ModelName@_SM_matching::match_high_to_low_scale_model_tree_level(*eft, *model);
   }

   void match_low_to_high_scale_model_tree_level()
   {
      if(!model || !eft) throw SetupError("Model pointer in matching class is NULL!");
      if(!constraint) throw SetupError("Constraint pointer in matching class is NULL!");

      @ModelName@_SM_matching::match_low_to_high_scale_model_tree_level(*model, *eft);
   }

private:
   @ModelName@<Two_scale>* model;
   SM<Two_scale>* eft;
   Constraint<Two_scale>* constraint;
};

} // namespace flexiblesusy
#endif
