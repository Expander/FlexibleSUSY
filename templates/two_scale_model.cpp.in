#ifdef VERBOSE
   std::cout << "Solving EWSB equations ...\n"
      "\tInitial guess: x_init =";
   for (std::size_t i = 0; i < @numberOfEWSBEquations@; ++i)
      std::cout << " " << x_init[i];
   std::cout << '\n';
#endif

